{
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/jsx-filename-extension": "off",
        "arrow-body-style": ["error", "always"]        
    },
    "globals": {
        "document": true
    }
}